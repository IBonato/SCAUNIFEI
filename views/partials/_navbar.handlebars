        {{else}}
        <div class="navbar navbar-static-top">
            <div class="navbar-inner">
                <div class="container">

                    <!-- logo -->
                    <div class="logo">
                        <a href="/">
                            <img src="/img/logo.png" alt="Site Logo" />
                        </a>
                    </div>
                    <!-- end logo -->

                    <!-- top menu -->
                    <div class="navigation">
                        <nav>
                            <ul class="nav topnav">
                                <li>
                                    <a href="/"><i class="icon-home"></i> Principal </a>
                                </li>
                                <li class="dropdown">
                                    <a href="#"><i class="icon-briefcase"></i> Cursos <i
                                            class="icon-angle-down"></i></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="/curso/base">Disciplinas Base</a></li>
                                        <li><a href="/curso/eam">Eng. Ambiental</a></li>
