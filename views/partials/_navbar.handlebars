                                </li>
                                <li>
                                    <a href="/disciplina/todas"><i class="icon-book"></i> Todas as Disciplinas
                                    </a>
                                </li>
                                <li>
                                    <a href="/sobre"><i class="icon-info-sign"></i> Sobre
                                        Nós </a>
                                </li>
                                <li class="dropdown active">
                                    <a href="/registro"><i class="icon-user"></i>
                                        Registre-se </a>
                                </li>
                                <div class="login-container">
                                    <form action="/" method="POST">
                                        <input type="email" placeholder="Email" name="email" id="emailfld"
                                            onkeyup="check_login();">
                                        <input type="password" placeholder="Senha" name="password"
                                            autocomplete="current-password" id="passwordfld" onkeyup="check_login();">
                                        <button class="btn btn-theme" type="submit" id="loginbtn" disabled><i
                                                class="icon-signin"></i>Login</button>
                                        <p class="fpwd">
                                            <a href="/forgot">Esqueci Minha Senha</a>
                                        </p>
                                    </form>
                                    <script>
                                        var check_login = function () {
                                            if (document.getElementById('emailfld').value == '' || document.getElementById('passwordfld').value == '') {
                                                document.getElementById("loginbtn").disabled = true;
                                            }
                                            else {
                                                document.getElementById("loginbtn").disabled = false;
                                            }
                                        }
                                    </script>
                                </div>
                            </ul>
                        </nav>
                    </div>
                    <!-- end menu -->
                </div>
            </div>
