<head>
    <!-- Site Name -->
    <title>SCAUNIFEI - Esqueci Minha Senha</title>
</head>

<!-- Subintro
================================================== -->
<section id="subintro">
    <div class="container">
        <div class="row">
            <div class="span8">
                <ul class="breadcrumb">
                    <li><a href="/"><i class="icon-home icon-rounded active"></i></a><i class="icon-angle-right"></i>
                    </li>
                    <li class="active"><a href="/forgot">Esqueci Minha Senha</a>
                </ul>
            </div>
            <div class="span4">
                <div class="search">
                    <form action="/busca" method="GET" class="input-append">
                        <input class="search-form" id="appendedPrependedInput" name="search" type="text"
                            placeholder="Faça sua busca aqui..." required>
                        <button class="btn btn-dark" type="submit"><i class="icon-search"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Conteúdo
================================================== -->

<section id="maincontent">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="text-center">
                    <h2>Recuperar Senha</h2>
                    <p>
                        Insira seu email para receber as instruções de como recuperar sua senha.
                    </p>
                </div>

                <form action="" method="POST" role="form">
                    <div class="row">

                        <div class="span12 form-group">
                            <div class="text-left">
                                <label for="email" class="control-label">Email:</label>
                            </div>
                            <input type="email" class="input-block-level" name="email" placeholder="Insira o seu email"
                                id="email" onkeyup="check_field();" required>
                        </div>

                        <div class="span12 text-center">
                            <br>
                            <button class="btn btn-large btn-danger" type="button" onclick="location.href='/'"><i
                                    class="icon-remove icon-white"></i>
                                Cancelar
                            </button>
                            <button class="btn btn-large btn-success" type="submit" id="success" disabled><i
                                    class="icon-ok icon-white"></i>
                                Concluir
                            </button>
                            <script>
                                var check_field = function () {
                                    if (document.getElementById('email').value == '') {
                                        document.getElementById("success").disabled = true;
                                    } else {
                                        document.getElementById("success").disabled = false;
                                    }
                                }
                            </script>
                        </div>

                    </div>
                </form>
            </div>
</section>